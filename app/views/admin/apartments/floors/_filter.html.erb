<%= form_with(url: apartment_path(apartment_id), method: :get, data: { turbo_frame: "floors-table"}) do |form| %>
	<%#= form.hidden_field :filter, value: @filter.id %>
  <%= form.hidden_field :apartment_id, value: apartment_id %>
  <div class="relative">
    <label for="hs-as-table-product-review-search" class="sr-only">Search</label>
    <%= form.search_field :search, id: "hs-as-table-product-review-search", placeholder: "Search", oninput: "this.form.requestSubmit()", class: "py-2 px-3 ps-11 block w-full border border-gray-400 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
  </div>
<% end %>