<div class="max-w-4xl px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="bg-white rounded-xl shadow dark:bg-neutral-900">
    <div class="relative h-60 rounded-t-xl bg-[url('https://preline.co/assets/svg/examples/abstract-bg-1.svg')] bg-no-repeat bg-cover bg-center">
      <div class="absolute top-0 end-0 p-4">
      </div>
    </div>
    <div class="p-12 bg-white">
      <div>
        <h1 class="text-3xl font-bold leading-6 mb-6">Company Details </h1>
        <p> Fill in company details and proceed to next step </p>
      </div>
      <%= form_with(model: @account, url: onboarding_account_details_path, method: :post) do |form| %>
        <div>
          <%= form.label :company_name, class: "inline-block text-sm font-medium text-gray-800 mt-4 dark:text-neutral-200" %>
          <%= form.text_field :company_name, class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
        </div>

        <div>
          <%= form.label :company_email, class: "inline-block text-sm font-medium text-gray-800 mb-4 dark:text-neutral-200" %>
          <%= form.text_field :company_email, class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
        </div>

        <div>
          <%= form.label :contact_person_name, class: "inline-block text-sm font-medium text-gray-800 mb-4 dark:text-neutral-200" %>
          <%= form.text_field :contact_person_name, class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
        </div>

        <div>
          <%= form.label :address, class: "inline-block text-sm font-medium text-gray-800 mb-4 dark:text-neutral-200" %>
          <%= form.text_field :address, class: "py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
        </div>

        <div class="mt-4">
          <%= form.submit "Next", class: "py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
        </div>
      <% end %>
    </div>
  </div>


</div>